<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- Bongo Cat packages -->
    <logger name="rocks.blackblock.bongocat" level="DEBUG" />

    <!-- Be less verbose about some packages -->
    <logger name="rocks.blackblock.bongocat.graphics.FrameRenderer" level="INFO" />
    <logger name="rocks.blackblock.bongocat.graphics.AnimationEngine" level="INFO" />
</configuration>
